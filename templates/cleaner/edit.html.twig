{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}

    <div class="row">

        {{ include('inc/admin_sidebar.html.twig') }}

        <div class=" col-md-4 offset-2">

            <form action="/admin/cleaner/edit/{{ cleaner.id }}" method="POST" class="form-horizontal">
                <div class="card border-primary">
                    <div class="card-header">
                        <p>Cleaner: {{ cleaner.firstName }} {{ cleaner.lastName }}</p>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            Edit:
                        </h5>

                        <div class="form-group">
                            <label for="firstName" class="col-form-label">First name</label>
                            <input type="text" class="form-control" name="firstName" value="{{ cleaner.firstName }}">
                        </div>

                        <div class="form-group">
                            <label for="lastName" class="col-form-label">Last name</label>
                            <input type="text" class="form-control" name="lastName" value="{{ cleaner.lastName }}">
                        </div>

                        <div class="form-group">
                            <label for="city" class="col-form-label">City</label>
                            <select class="custom-select" name="city">
                                {% for city in cities %}
                                    <option value = "{{ city.id }}"
                                        {% if cleaner.city.id == city.id %}
                                            selected
                                        {% endif %}
                                    >{{ city.name }}</option>
                                {% endfor %}
                            </select>
                        </div>



                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Save</button>
                </div>
            </form>
        </div>

    </div>


{% endblock %}

{% block javascripts %}{% endblock %}