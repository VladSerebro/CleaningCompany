{% extends 'base.html.twig' %}

{% block title %}Create booking{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-4 offset-4">

            <div class="card border-success mb-3" >
                <div class="card-header">Booking parameters</div>
                <div class="card-body">
                    <b><h5 class="card-title">City</h5></b>
                    <p class="card-text">{{ city.name }}</p>
                    <h5 class="card-title">Date and time</h5>
                    <p class="card-text">{{ date }}</p>
                    <h5 class="card-title">Duration</h5>
                    <p class="card-text">{{ duration }} hours</p>
                </div>
            </div>

            <form action="/booking/create/finish" class="form-horizontal" method="POST">

                <div class="form-group">
                    <label for="cleaner" class="col-form-label">Cleaner</label>
                    <select class="custom-select" name="cleaner">
                        {% for cleaner in cleaners %}
                            <option value = "{{ cleaner.id }}">{{ cleaner.firstName }} {{ cleaner.lastName }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Save booking</button>
                </div>

            </form>

        </div>
    </div>

{% endblock %}